<h1>Listing jokes</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Author</th>
    <th>Date</th>
    <th>Joke</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @jokes.each do |joke| %>
  <tr>
    <td><%= joke.title %></td>
    <td><%= joke.author %></td>
    <td><%= joke.date %></td>
    <td><%= joke.joke %></td>
    <td><%= link_to 'Show', joke %></td>
    <td><%= link_to 'Edit', edit_joke_path(joke) %></td>
    <td><%= link_to 'Destroy', joke, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

